{
  "name": "nvim-typescript-test",
  "version": "1.0.0",
  "description": "TypeScript test project for Neovim LSP and DAP testing",
  "main": "dist/helloworld.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/helloworld.js",
    "dev": "ts-node helloworld.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": ".coverage"
  },
  "keywords": ["neovim", "testing", "typescript", "lsp", "dap"],
  "author": "Neovim Test Suite",
  "license": "MIT"
}
